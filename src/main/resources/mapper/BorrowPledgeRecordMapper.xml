<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tianli.borrow.dao.BorrowPledgeRecordMapper">

    <select id="selectAmountSumByTime" resultType="decimal">
        SELECT
            ifnull(SUM(amount),0.0)
        FROM borrow_pledge_record
        <where>
            <if test="startTime != null">
                pledge_time &gt;= #{startTime}
            </if>
            <if test="endTime != null">
                and pledge_time &lt;= #{endTime}
            </if>
        </where>
    </select>
</mapper>
